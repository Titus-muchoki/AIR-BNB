{{#partial "content"}}
    {{#if editCategory}}
        <h1>Edit this amount!</h1>
        <form action="/categories/{{category.id}}" method="post">
            <label for="amount">Edit this booking amount</label>
            <input id="newCategoryAmount" name="newCategoryName" type="text" value="{{category.amount}}">
            <button type="submit" class="btn btn-default">Go!</button>
        </form>
    {{else}}
        <h1>Add a new Amount!</h1>
        <form action="/categories" method="post">
            <label for="amount">Booking Amount</label>
            <input id="amount" name="amount" type="text">
            <button type="submit" class="btn btn-default">Go!</button>
        </form>
    {{/if}}
{{/partial}}

{{> layout.hbs}}
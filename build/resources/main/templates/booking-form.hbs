{{#partial "content"}}

    {{#if editBooking}}
        <h1>Edit this Booking!</h1>
        <form action="/bookings/{{booking.id}}" method="post">
            <br>
            <label for="description">Edit this booking's description</label>
            <input id="description" name="description" type="text" value="{{booking.description}}">
            <br>
            <label for="categoryId">Update this booking's category:</label>
            <select id="categoryId" name="categoryId">
                {{#each categories}}
                    <option value="{{id}}">{{name}}</option>
                {{/each}}
            </select>
            <p>Don't see the right category?<a href="/categories/new">Add a new one first.</a></p>
            <button type="submit" class="btn btn-default">Go!</button>
        </form>
    {{else}}
        <h1>Add a new Booking!</h1>

        <form action="/bookings" method="post">
            {{#if categories}}
                <label for="description">Booking Description</label>
                <input id="description" name="description" type="text">
                <label for="categoryId">Categorize this booking as:</label>
                <select id="categoryId" name="categoryId">
                    {{#each categories}}
                        <option value="{{id}}">{{name}}</option>
                    {{/each}}
                </select>
                <p>Don't see the right category?<a href="/categories/new">Add a new one first.</a></p>
            {{else}}
                <h3> You'll need to add a category before you add a booking. <a href="/categories/new">Add one here.</a> </h3>

            {{/if}}
            <button type="submit" class="btn btn-default">Go!</button>
        </form>
    {{/if}}

{{/partial}}

{{> layout.hbs}}
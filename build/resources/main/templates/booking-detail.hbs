{{#partial "content"}}

    <p>Description:{{ booking.description }} </p>
    <p>Category of this loan: {{ category.name }}</p>
    <h5>Created At:</h5>
    <p> {{ booking.createdAt }}</p>
    <h5>Booking status:
        {{#if booking.published }}
            <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Completed
        {{else}}
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Open
        {{/if}}
    </h5>

    <p>
        <a href="/bookings/{{booking.id}}/edit">Edit this booking</a><br>
        <a href="/categories/{{booking.categoryId}}/bookings/{{booking.id}}/delete">DELETE this booking</a>
    </p>

{{/partial}}

{{> layout.hbs}}